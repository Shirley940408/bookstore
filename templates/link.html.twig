{% extends "base.html.twig" %}

 {% block content %}
  <div class="container my-4">
    <div class="row">
      {% for content in bookCate %}
      <div class="col-12 col-md-4 col-lg-3 my-4">
          <div class="card cardstyle" style="">
            <a href="./book.php?bid={{content.bid}}">
            <img class="card-img-top" src="./{{content.img}}" alt="Card image cap">
            </a>
            <div class="card-body">
              <h5 class="card-title">{{content.bname}}</h5>
              <p class="card-text">{{content.summary}}</p>
              <a  class="btn btn-primary buy_button" data-price="{{content.price}}">{{content.price}}</a>
            </div>
          </div>
      </div>
      {% endfor %}
    </div>
  </div>
  {% endblock %}