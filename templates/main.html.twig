{% extends "base.html.twig" %}

{% block content %}
  <div class="container-fluid p-0 position-relative bookstore">
    <div style="background-color:#474747;opacity: 0.4;height:80vh;"></div>
    <div class="row position-absolute m-0 w-100 align-items-center" style="top:0;height:100%;">
      <div class="col-12 text-center w-100">
        <p class="display-3 text-white">Hi Geek!</p>
      </div>
    </div>
  </div>

  <div class="container my-4">
    <div class="row">
      {% for content in book %}
      <div class="col-12 col-md-4 col-lg-3 my-4">
          <div class="card cardstyle" style="">
            <a href="./book.php?bid={{content.bid}}">
            <img class="card-img-top" src="./{{content.img}}" alt="Card image cap">
            </a>
            <div class="card-body">
              <h5 class="card-title">{{content.bname}}</h5>
              <p class="card-text">{{content.summary}}</p>
              <a  class="btn btn-primary buy_button" data-price="{{content.price}}">{{content.price}}</a>
            </div>
          </div>
      </div>
      {% endfor %}
    </div>
  </div>



{% endblock %}


{% block CSS %}
  <style type="text/css">
    .bookstore{
      background-image: url(./img/store.jpg);
      background-position:center center;
      background-size: cover;
    }
    .cardstyle:hover{
      box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
  </style>
{% endblock %}

